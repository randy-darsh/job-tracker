<h2>All Jobs for <strong><%= @company.name %></strong></h2>

<% @jobs.each do |job| %>
  <ul><%= link_to job.title, company_job_path(job.company, job) %> at <%= job.company.name %>
  <%= link_to "Edit Job", edit_company_job_path(job.company, job) %>
  <%= link_to "Delete Job", company_job_path(job.company, job), method: :delete %></ul>
<% end %>
<br><br>
<%= link_to "New Job", new_company_job_path(@company) %>
<br><br>
<h4>Create Contact:</h4>
<%= render partial: 'contacts/form' %>
<h4>Contacts for <%= @company.name %>:</h4>
<% @company.contacts.each do |contact| %>
<ul>
  Name: <%= contact.full_name %><br>
  Position: <%= contact.position %><br>
  Email: <%= contact.email %>
</ul>
<% end %>

<%= yield %>
